description:
  Default template for Ruby projects.

options:
  bin:
    description:
      Includes executable file.
    files:
      executable: bin/(project)
  test:
    description:
      Includes test files.
    files:
      test.rb: test/(project)_test.rb
      testhelper.rb: test/helper.rb

directories:
  - lib/(project)

files:
  CHANGELOG:
  COPYING:
  README.rdoc:
  module.rb : lib/(project).rb

